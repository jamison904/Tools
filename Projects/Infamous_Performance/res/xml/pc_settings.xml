<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Preference
        android:key="visible_tabs"
        android:title="@string/pt_show_tabs"/>

    <CheckBoxPreference
        android:key="boot_mode"
        android:summary=""
        android:title="@string/pt_initd"/>

    <Preference
        android:key="int_sd"
        android:title="@string/pt_int_sd"/>

    <Preference
        android:key="ext_sd"
        android:title="@string/pt_ext_sd"/>

    <Preference
        android:key="br_op"
        android:summary="@string/bkup_info"
        android:title="@string/backup_restore"/>

    <CheckBoxPreference
        android:key="use_light_theme"
        android:summary="@string/ps_use_light_theme"
        android:title="@string/pt_use_light_theme"/>

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:defaultValue="#ff000000"
        android:key="widget_bg_color"
        android:title="@string/pt_widget_bg_color"/>
    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:defaultValue="#ff808080"
        android:key="widget_text_color"
        android:title="@string/pt_widget_text_color"/>

    <Preference android:key="version_info"/>

    <Preference android:key="pref_store"
        android:summary="@string/listings"
        android:title="@string/dev_store"/>


</PreferenceScreen>
